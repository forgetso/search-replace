{
  "compilerOptions": {
    "strict": true,
    "rootDir": "src",
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": false,
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "noEmitOnError": true,
    "lib": [
      "es5", "es6", "dom", "dom.iterable"
    ],
  },
  "include": [
    "**/*.ts",
    "assets/**/*",
    "manifest.json"
  ],
  "types": [
    "chrome",
    "cypress",
    "dom"
  ],
  "exclude": [
    "node_modules",
    "build",
    "tests",
    "src/cypress",
    "src/cypress.config.ts"
  ],

}
